{
  "name": "ts-template",
  "version": "1.0.0",
  "description": "Boilerplate template for typescript and node",
  "main": "index.js",
  "scripts": {
    "start": "npm run build:live",
    "build": "tsc -p .",
    "prod": "node lib/index.js",
    "build:live": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "lint": "npx prettier --write .",
    "test": "jest",
    "test:integration": "jest --config jest.integration.config.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "keywords": [
    "node",
    "typescript",
    "template"
  ],
  "author": "Jonny",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/node": "^18.7.13",
    "axios": "^0.27.2",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "nodemon": "^2.0.15",
    "prettier": "2.6.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.4.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "express": "^4.18.1"
  }
}
